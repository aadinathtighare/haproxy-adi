master (client) haproxy machine ==>>
  1  ll
    2  yum install haproxy -y
    3  cd /etc/
    4  ll
    5  cd haproxy/
    6  ll
    7  nano haproxy.cfg
    8  ll
    9  haproxy -v
   10  mkdir haproxy
   11  cd haproxy/
   12  ll
   13  nano haproxy.conf
   14  firewall-cmd --permanent --add-port=80/tcp
   15  yum install firewall -y
   16*
   17  firewall-cmd --permanent --add-port=80/tcp
   18  sudo systemctl enable firewalld
   19  sudo systemctl start firewalld
   20  sudo systemctl status firewalld
   21  history
   22  firewall-cmd --permanent --add-port=80/tcp
   23  hostname -i
   24  hostname
   25  hostname -i
   26  curl 172.31.88.46:80
   27  haproxy -f haproxy.conf
   28  vim haproxy.conf
   29  haproxy -f haproxy.conf
   30  vim haproxy.conf
   31  haproxy -f haproxy.conf
   32  systemctl restart haproxy.service
   33  haproxy -f haproxy.conf
   34  history
   35  sudo firewall-cmd --reload
   36  haproxy -f haproxy.conf
   37  vim haproxy.conf
   38  haproxy -f haproxy.conf
